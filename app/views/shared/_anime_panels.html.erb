<% @animes.each_slice(3) do |row_animes| %>
  <div class="row">
    <% row_animes.each do |anime| %>
      <div class="col-sm-4">
        <div class="panel panel-deafult">
          <div class="panel-header">
            <%= anime.title %>
          </div>
          <div class="panel-body">
            <div class="img-box">
              <% if anime.img_url.blank? %>
                <%= image_tag("no_image.png", class: "box-img") %>
              <% else %>
                <%= image_tag(anime.img_url, class: "box-img") %>
              <% end %>
            </div>
            <div>
              <p>
                <%= anime.story %>
              </p>
              <% if user_signed_in? %>
                <% if @watch_animes.include?(anime) %>
                  <%= render 'shared/unwatch_button', anime_id: anime.id %>
                <% else %>
                  <%= render 'shared/watch_button', anime_id: anime.id %>
                <% end %>
                <% if current_user.admin? %>
                  <%= link_to 'Edit', edit_anime_path(anime.id),
                                      class: 'btn btn-sm btn-default' %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>