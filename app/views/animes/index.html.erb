<div class="row">
  <div class="col-md-3">
    <%= render 'layouts/master_sidemenu' %>
  </div>
  <div class="col-md-9">
    <h1>アニメ一覧</h1>
    <table class="table">
      <tr>
        <th>Title</th>
        <th>API Number</th>
        <th>Year</th>
        <th>Season</th>
      </tr>
      <% @animes.each do |anime| %>
        <tr>
          <td><%= anime.title %></td>
          <td><%= anime.api_number %></td>
          <td><%= anime.cour.year %></td>
          <td><%= anime.cour.season %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>